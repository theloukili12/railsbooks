<% if user_signed_in? %>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Book title</th>
      <th>Isbn</th>
      <th>Language book</th>
      <th>Number pages</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <% if book.user == current_user %>
        <tr>
          <td><%= link_to book.Book_title ,book%></td>        
          <td><%= book.Isbn %></td>
          <td><%= book.language_book %></td>
          <td><%= book.number_pages %></td>        
          <td><%= link_to '    Book information', book , class:"btn btn-dark" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Book', new_book_path , class:"btn btn-dark" %>

<% else %>
<%= render 'layouts/homepage' %>

<% end %>

